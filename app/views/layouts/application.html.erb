<!DOCTYPE html>
<html>
  <head>
    <title>Rider Chronicles</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          <a class="navbar-brand home-brand">Rider Chronicles</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to "Home", user_path(current_user) %></li>
                <li><%= link_to "About", page_about_path %></li>
                <li><%= link_to "Contact", page_contact_path %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: "delete", class:"sign-in-form" %></li>
              <% else %>
              <div id="login_form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login_form") do |f| %>
                    <div class="col-xs-5">
                      <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                          <%= f.email_field :email, autofocus: true, id: "login_email", class: "form-control"%> <br/>
                        </div>
                        <% if devise_mapping.rememberable? -%>
                          <div class="row">
                            <div class="col-sm-9">
                              <%= f.label :remember_me %>
                            </div>
                            <div class="col-sm-3 remember_me_chk">
                              <%= f.check_box :remember_me %>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <div class="col-xs-5">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                          <%= f.password_field :password, autocomplete: "off", id: "login_password", class: "form-control"%> <br/>
                        </div>
                        <%= link_to "Forgot your password?", new_password_path(resource_name) %>

                      </div>

                      <button type="submit" class="btn btn-primary">Login</button>
                 <% end %>
               </div>
