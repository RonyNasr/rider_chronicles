<h1><%= @bike.year + ' ' + @bike.make+' - ' +@bike.model %></h1>
<div class="row">
  <div class=" col-sm-6 tumbnail">
    <img src="<%= @bike.imageURL %>" alt="<%= @bike.year + ' ' + @bike.make+' - ' +@bike.model %>" />
  </div>

  <div class=" col-sm-4 col-sm-offset-2 bike-info">
    <h5>Category: <%= @bike.category %><br></h5>
    <h5>Make: <%= @bike.make %><br></h5>
    <h5>Model: <%= @bike.model %><br></h5>
    <h5>Year: <%= @bike.year %><br></h5>
    <h5>Color: <%= @bike.color %><br></h5>
    <h5>Engine: <%= @bike.engine %><br></h5>
    <h5>Gearbox: <%= @bike.gearbox %><br></h5>
    <h5>Drivetrain <%= @bike.drivetrain %><br></h5>
  </div>
</div>

<%= link_to "Edit Bike", edit_user_bike_path(@user,@bike) %> |
<%= link_to "Delete", user_bike_path(@user,@bike), :data => {
  :confirm => "Are you sure?", :method => "delete"} %> |
<%= link_to "Back", user_path(@user) %>
<br>

<%= link_to "Add Review", new_bike_review_path(@bike) %>

<% if @bike.reviews.any?%>
  <% @bike.reviews.each do |review|%>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <%= review.title %>
      </div>
      <div class="panel-body">
        <%= review.content %>
      </div>
    </div>
  <% end %>
<% end %>
